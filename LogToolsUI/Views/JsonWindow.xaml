<Window x:Class="LogToolsUI.Views.JsonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogToolsUI.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="JsonWindow" Height="450" Width="600">
    <Grid>
        <ScrollViewer VirtualizingStackPanel.IsVirtualizing="True" HorizontalScrollBarVisibility="Disabled">
            <TextBox TextWrapping="Wrap" Text="{Binding Str}"/>
        </ScrollViewer>
    </Grid>
</Window>
